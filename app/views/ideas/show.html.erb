<p id="notice"><%= notice %></p>

<%= link_to 'Back', ideas_path, class: 'btn btn-default' %>
<%= link_to 'Edit', edit_idea_path(@idea), class: 'btn btn-primary' %>

<div class="row">
	<div class="col-md-9">
		<h4><%= @idea.name %></h4>
		<p><%= @idea.description %></p>
	</div>
	<div class="col-md-3">
		<%= image_tag(@idea.picture_url, :width => 250) if @idea.picture.present? %>
	</div>
</div>

